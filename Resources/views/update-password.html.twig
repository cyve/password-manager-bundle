{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
    {% include '@CyvePasswordManager/include/flashes.html.twig' %}

    <h1>Modifier le mot de passe</h1>
    {% form_theme form '@CyvePasswordManager/include/password-widget.html.twig' %}
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
